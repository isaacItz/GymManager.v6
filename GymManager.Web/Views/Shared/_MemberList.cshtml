@model List<GymManager.Core.Entities.Member>
@{

}
<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">LastName</th>
            <th scope="col">BirthDay</th>
            <th scope="col">Email</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var member in Model)
        {
            <tr>
                <th scope="row">@member.Name</th>
                <td>@member.LastName</td>
                <td>@member.BirthDay.ToString("dd/MM/yyyy")</td>
                <td>@member.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-memberId="@member.Id" class="btn btn-outline-info">Edit</a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-memberId="@member.Id" class="btn btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>