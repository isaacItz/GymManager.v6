@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section HeaderRight{
<form class="d-flex">
    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
    <button class="btn btn-outline-success" type="submit">Search</button>
</form>
}
@section Scripts{
    <script src="~/js/attendance.js"></script>
}

<!-- Begin page content -->
<main class="flex-shrink-0">
    <div class="container">
        <h1 class="mt-5">User Check in</h1>
    </div>
</main>

<form class="container">
    <div class="form-group p-2 pt-5 pb-2">
        <label for="gym-user">User</label>
        <input type="text" class="form-control" id="gym-user" aria-describedby="emailHelp" placeholder="Enter User" />
    </div>

    <button type="submit" name="check in" id="submit" class="btn btn-primary">Submit</button>
</form>


<div id="mensaje" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="mySmallModalLabel">Small modal</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body" id="text-message">
                ...
            </div>
        </div>
    </div>
</div>